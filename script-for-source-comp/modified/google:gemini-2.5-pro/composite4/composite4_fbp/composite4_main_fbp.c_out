struct node {
struct node *left;
struct node *right;
struct node *parent;
int count;
};
struct node * create_node(struct node * p)
{
struct node *n = malloc(sizeof(struct node));
if (n == 0) { abort(); }
n->left = 0;
n->right = 0;
n->parent = p;
n->count = 1;
return n;
}
struct node *create_tree()
{
struct node *n = create_node(0);
return n;
}
int subtree_get_count(struct node *node)
{
